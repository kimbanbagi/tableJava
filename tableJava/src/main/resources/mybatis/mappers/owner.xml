<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dc.human.kimbanbagi.tableJava.owner.dao.OwnerDAO">
    <resultMap id="owner" type="dc.human.kimbanbagi.tableJava.common.vo.UserVO">
        <result property="uId" column="user_id" />
        <result property="uEmail" column="user_email" />
        <result property="uPwd" column="user_pwd" />
        <result property="uName" column="user_name" />
        <result property="uNumber" column="Phone_number" />
        <result property="uImage" column="user_image" />
        <result property="uRole" column="user_role" />
        <result property="register" column="store_register" />
        <result property="withdrawal" column="withdrawal_status" />
    </resultMap>

    <select id="getOwnerInfo" resultMap="owner">
        <![CDATA[
            SELECT
                user_email,
                user_pwd,
                user_name,
                phone_number,
                user_role,
                store_register,
                withdrawal_status
            FROM users
            WHERE user_id=#{userId}
        ]]>
    </select>
</mapper>