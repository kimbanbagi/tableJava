<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dc.human.kimbanbagi.tableJava.common.dao.PasswordDAO">
    <select id="checkPwd" parameterType="String">
        <![CDATA[
            SELECT COUNT(*) as cnt
            FROM users
            WHERE user_id=#{userId} AND user_pwd=#{currPwd}
        ]]>
    </select>

    <update id="updatePwd" parameterType="String">
        <![CDATA[
            UPDATE users
            SET user_pwd = #{newPwd}
            WHERE user_id=#{userId}
        ]]>
    </update>
</mapper>