<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dc.human.kimbanbagi.tableJava.review.dao.ReviewDAO">
    <resultMap id="review" type="dc.human.kimbanbagi.tableJava.review.vo.ReviewVO">
        <result property="rId" column="restaurant_id" />
        <result property="rName" column="restaurant_name" />
        <result property="rAddress" column="restaurant_address" />
        <result property="uId" column="user_id" />
        <result property="star" column="star" />
        <result property="grade" column="grade" />
        <result property="review" column="review" />
        <result property="createdDate" column="created_date" />
        <result property="updatedDate" column="updated_date" />
    </resultMap>
    <insert id="addReview" parameterType="dc.human.kimbanbagi.tableJava.review.vo.ReviewVO">
        <![CDATA[
            insert into review(restaurant_id, restaurant_name, user_id, review )
            values (#{rId}, #{rName}, #{uId}, #{review})
        ]]>
    </insert>
</mapper>