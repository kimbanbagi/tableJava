<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dc.human.kimbanbagi.tableJava.user.dao.UserDAO">
    <resultMap id="user" type="dc.human.kimbanbagi.tableJava.common.vo.UserVO">
        <result property="uId" column="user_id" />
        <result property="uEmail" column="user_email" />
        <result property="uPwd" column="user_pwd" />
        <result property="uName" column="user_name" />
        <result property="uNumber" column="Phone_number" />
        <result property="fileName" column="user_image" />
        <result property="uRole" column="user_role" />
        <result property="register" column="store_register" />
        <result property="withdrawal" column="withdrawal_status" />
        <result property="grade" column="grade" />
    </resultMap>

    <select id="getUserInfo" resultMap="user">
        <![CDATA[
        SELECT
            user_id,
            user_email,
            user_pwd,
            user_name,
            phone_number,
            user_role,
            store_register,
            withdrawal_status,
            grade,
            user_image
        FROM users
        WHERE user_id=#{userId}
        ]]>
    </select>

    <update id="updateProfile" parameterType="dc.human.kimbanbagi.tableJava.common.vo.UserVO">
        <![CDATA[
            UPDATE users
            SET
                user_email=#{uEmail},
                phone_number=#{uNumber},
                user_image = #{fileName}
            WHERE user_id=#{uId}
        ]]>
    </update>
</mapper>